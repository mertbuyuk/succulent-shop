<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="school.cactus.succulentshop.product.ProductItem" />
    </data>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detaiImageView"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{item.imageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/detailTitleText"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="8dp"
            android:text="@{item.title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/lessblack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/detaiImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detaiImageView"
            tools:text="Small decorative succulent pot hanger" />

        <TextView
            android:id="@+id/detailPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkprimary"
            android:fontFamily="sans-serif-light"
            android:padding="4dp"
            android:text="@{item.price}"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/detaiImageView"
            app:layout_constraintEnd_toEndOf="@id/detaiImageView"
            tools:text="$29.90" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</layout>